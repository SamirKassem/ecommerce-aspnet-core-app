@model Cinema 

@{
	ViewData["Title"] = "Add a new cinema";
}

<div class="row test">
	<div class="col-md-8 offset-md-2">
		<p>
			<h1>
				Add a new cinema
			</h1>
		</p>
		<div class="row">
			<div class="col-md-8 offset-2">
				<form asp-action="Create">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-group text-center">
						<img class="border-info rounded-circle" id="logo" style="max-width:150px" />
					</div>

					<div class="form-group">
						<label asp-for="Logo" class="control-label"></label>
						<input asp-for="Logo" class="form-control" />
						<span asp-validation-for="Logo" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Name" class="control-label"></label>
						<input asp-for="Name" class="form-control" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>

					<div class="form-group">
						<label asp-for="Description" class="control-label"></label>
						<input asp-for="Description" class="form-control" />
						<span asp-validation-for="Description" class="text-danger"></span>
					</div>

					<div class="form-group">
						<input type="submit" value="Create" class="btn btn-success float-right"/>
						<a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
					</div>

				</form>
			</div>
		</div>
	</div>
</div>


@section Scripts {
	<script>
		$(document).ready(function(){
			document.getElementById("logo").src = $("#Logo").val();
		})

		$("#Logo").on("change", function(){
			document.getElementById("logo").src = $(this).val();
		})
	</script>

}